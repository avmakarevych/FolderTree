@model FolderTree.Models.DirectoryViewModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Import">Import</a><br/>
    <a asp-action="Export">Export</a><br/>
</p>

@if (Model.RootDirectories != null)
{
    <ul>
        @foreach (var directory in Model.RootDirectories)
        {
            <partial name="_RenderDirectoryHierarchy" model="directory" />
        }
    </ul>
}

<p>
    <form asp-action="DeleteAll" method="post" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete all directories?');">Delete All Directories</button>
            </form>
</p>